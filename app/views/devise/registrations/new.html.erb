<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light p-4 mb-0">Sign up</h4>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="input-group mt-3 mb-3">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
            <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "name", placeholder: "ニックネーム" %>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <%= f.email_field :email, class:"form-control", autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <!--<% if @minimum_password_lenght %>-->
            <!--  <em class="alert-heading">(<%= @minimum_password_length %> characters minimum)</em>-->
            <!--<% end %>-->
            <span class="input-group-text"><i class="fas fa-key"></i></span>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "パスワード(6文字以上)" %>
          </div>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-key"></i></span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "パスワード確認" %>
          </div>
          <hr>
          <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-info mt-10" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



