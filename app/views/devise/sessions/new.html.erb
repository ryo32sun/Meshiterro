<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5 ">
      <h4 class="text-dark bg-light p-4 mb-0">Log in</h4>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"form-control" %>
          </div>
        
          <div class="input-group mb-4">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-key"></i></span>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",class:"form-control" %>
          </div>
        
          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="input-group ml-2">-->
          <!--    <span><%= f.check_box :remember_me %></span>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->
          <hr>
          <div class="actions mt-4">
            <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-10" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
      
      
    </div>
  </div>
</div>





